{
    "manifest_version": 3,
    "name": "noBS Always Ready To Work",
    "version": "1.0",
    "description": "Automates LinkedIn tasks",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": [
      "https://www.linkedin.com/"
    ],
    "icons": {
      "16": "noBS_AR.png",
      "48": "noBS_AR.png",
      "128": "noBS_AR.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_icon": {
        "16": "noBS_AR.png",
        "48": "noBS_AR.png",
        "128": "noBS_AR.png"
      }
    }
  }